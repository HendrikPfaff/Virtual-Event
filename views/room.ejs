        crossorigin="anonymous"></script>
<script src="../js/dashboard.js"></script>
<script>
    $(document).ready(function(){

        $('#welcomeModal').modal('show')
        $('#afkButton').click(function(e){
            $('#afkModal').modal('show')
        })

    });
</script>
</html>

